{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "includes": "src",
    "includeDeclarations": true,
    "mode": "file",
    "name": "Conversely Documentation",
    "out": "docs"
  }
}
